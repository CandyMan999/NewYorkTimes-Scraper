<div class="container-fluid article-container">
    {{#each favorites}}
    <div id="{{this._id}}" class="card">
        <div class="card-header">
            <h3>
                <a class="article-link font-effect-shadow-multiple" target="_blank" rel="noopener noreferrer" href="{{this.link}}">{{this.label}}</a>
                <a data-_id="{{this._id}}" data-toggle="modal" data-target="#exampleModal" class="btn btn-success add mr-2">Add
                    A Note</a>
                <a data-_id="{{this._id}}" class="btn btn-success deleteFav mr-2">Delete
                    from Saved</a>
            </h3>
        </div>
        <div class="card-body">{{this.summary}}</div>
    </div>
    <br><br>
    {{/each}}

    <div id="results-modal" class="container-fluid article-container"></div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    {{!-- <h5 class="modal-title" id="exampleModalLabel">{{this.label}}</h5> --}}
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="notes-container">

                    </div>

                    <input type="text" placeholder="Give your Note A Title" id="title"></input>
                    <input type="text" placeholder="Enter a Note" id="body"></input>
                </div>
                <div class="modal-footer">
                    {{!-- <button type="button" class="btn btn-secondary close" data-dismiss="modal">Close</button>
                    <button id="save-note" data-_id="${res._id}" type="button" class="btn btn-primary">Save changes</button>
                    --}}
                </div>
            </div>
        </div>
    </div>
</div>

